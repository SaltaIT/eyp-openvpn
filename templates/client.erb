client
dev <%= @dev %>

comp-lzo
<% if defined?(@proto) -%>
proto <%= @proto %>
<% end -%>

<% if @persist_key -%>
persist-key
<% end -%>
<% if @persist_tun -%>
persist-tun
<% end -%>

remote <%= @remote %> <%= @remote_port %>

<% if @tls_client -%>
tls-client
<% end -%>

ns-cert-type server

ca <%= scope.lookupvar('openvpn::params::client_conf_dir') %>/<%= @client_name %>/ca.pem
cert <%= scope.lookupvar('openvpn::params::client_conf_dir') %>/<%= @client_name %>/cert.pem
key <%= scope.lookupvar('openvpn::params::client_conf_dir') %>/<%= @client_name %>/key.pem
